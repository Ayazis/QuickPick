<Window x:Class="HexTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="+" Click="Button1_Click" Width="20" Height="20" VerticalAlignment="Top" />
        <Button Content="-" Click="Button2_Click" Width="20" Height="20" VerticalAlignment="Top" Margin="20" />
        <TextBox Text="5"  TextChanged="TextBox_TextChanged" Width="20" Height="20" VerticalAlignment="Top" Margin="0,20,50,50"/>
        <Canvas Name="Canvas" VerticalAlignment="Center" HorizontalAlignment="Center"></Canvas>
    </Grid>
</Window>
