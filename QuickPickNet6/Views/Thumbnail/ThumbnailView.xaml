<UserControl x:Class="QuickPick.UI.Views.Thumbnail.ThumbnailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickPick.UI.Views.Thumbnail"
             mc:Ignorable="d" 
             Width="200" Height="200">
    <UserControl.DataContext>
        <local:ThumbnailDataContext/>
    </UserControl.DataContext>
    <Grid>        
        <!-- Rectangle to display the thumbnail image -->
        <Rectangle x:Name="ImageRectangle"
                   Width="200"
                   Height="200"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"                                      
                   Fill="#000000"
                   >            
        </Rectangle>
        <TextBlock Text="{Binding WindowTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="White"   d:Text="PlaceholderTitle" Margin="5" />
    </Grid>
</UserControl>
