<Window x:Class="QuickPick.UI.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:QuickPick.UI.Views.Settings"
        xmlns:local="clr-namespace:QuickPick.UI.Views.Settings"
        Title="QuickPick Settings" Height="300" Width="300"
        Foreground="White"        
        Background="#303030" >
    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary Source="../Resources.xaml"/>
    </Window.Resources>
    <Border Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Header="Auto Update:" Grid.Row="0" Foreground="{StaticResource ForegroundBrush}" BorderThickness="0.0" >
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="{StaticResource ForegroundBrush}"/>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                <StackPanel>
                    <RadioButton Content="Never" 
                     GroupName="AutoUpdate" 
                     Foreground="{StaticResource ForegroundBrush}"
                     IsChecked="{Binding AutoUpdateSetting, Converter={StaticResource EnumToBooleanConverter}, 
                        ConverterParameter={x:Static local:AutoUpdateSetting.Never}}" />


                    <RadioButton Content="Pre-Release" 
                     GroupName="AutoUpdate" 
                     Foreground="{StaticResource ForegroundBrush}"
                        IsChecked="{Binding AutoUpdateSetting, Converter={StaticResource EnumToBooleanConverter}, 
                    ConverterParameter={x:Static local:AutoUpdateSetting.PreRelease}}"/>


                    <RadioButton Content="Master" 
                     GroupName="AutoUpdate" 
                     Foreground="{StaticResource ForegroundBrush}"
                    IsChecked="{Binding AutoUpdateSetting, Converter={StaticResource EnumToBooleanConverter}, 
                        ConverterParameter={x:Static local:AutoUpdateSetting.Master}}" />

                </StackPanel>
            </GroupBox>

            <!-- Active Apps Section -->
            <GroupBox Header="Show Active Apps:" Grid.Row="1" 
                      Margin="0,20"
                      Foreground="{StaticResource ForegroundBrush}" BorderBrush="#6F6F6F" BorderThickness="0">
                <StackPanel>
                    <RadioButton Content="Include pinned TaskBar Apps" GroupName="PinnedApps"  Foreground="{StaticResource ForegroundBrush}"/>
                    <RadioButton Content="Active Apps only" GroupName="PinnedApps"   Foreground="{StaticResource ForegroundBrush}"/>


                </StackPanel>
            </GroupBox>
        </Grid>
    </Border>
</Window>
