<UserControl x:Class="QuickPick.UI.Views.Hex.HexCenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hex="clr-namespace:QuickPick.UI.Views.Hex"
             xmlns:local="clr-namespace:QuickPick.UI.Views.Hex"
             mc:Ignorable="d" 
             Width="auto"
             Height="auto"
              UseLayoutRounding="False" 
             d:DesignHeight="125" d:DesignWidth="125">
    <!--  UseLayoutRounding="False" needs to be set. On clickwindow this is set to true to enhance icon sharpness. If not overridden here, we have pixel deviation on hex placement. -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Width="125" Height="125">
        <Canvas Width="125" Height="125" Name="HexCanvas" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
