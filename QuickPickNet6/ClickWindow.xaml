<Window x:Class="QuickPick.ClickWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickPick"                         
             xmlns:converters="clr-namespace:QuickPick.Converters"
             xmlns:custom="clr-namespace:QuickPick.Custom"
             mc:Ignorable="d"               
             MinWidth="300"
             MinHeight="300"
             SizeToContent="WidthAndHeight"
             Background="#00ffffff"         
             ShowInTaskbar="true"
             AllowsTransparency="True" WindowStyle="None" 
             >

    <Window.DataContext>
        <local:QuickPickMainWindowModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        <Button Style="{StaticResource ResourceKey=RoundButton}"  
            Grid.Row="1"
            Visibility="Visible" 
            Name="ButtonCenter" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="45" Height="45"         
            Click="btnCenterClick"/>

        <!-- Overlay buttons -->
        <Button Name="ButtonTop" 
            Width="45" Height="45"
            HorizontalAlignment="Center" VerticalAlignment="Top"
            Opacity="50"
            Click="btnTopClick"/>

        <Button Name="ButtonRight" 
            Width="45" Height="45"
            HorizontalAlignment="Right" VerticalAlignment="Center"
            Opacity="50"
            Click="btnRightClick"/>

        <Button Name="ButtonBottom" 
            Width="45" Height="45"
            HorizontalAlignment="Center" VerticalAlignment="Bottom"
            Opacity="50"
            Click="btnBottomClick"/>

        <Button Name="ButtonLeft" 
            Width="45" Height="45"
            HorizontalAlignment="Left" VerticalAlignment="Center"
            Opacity="0"
            Click="btnLeftClick"/>
    </Grid>
    <ItemsControl ItemsSource="{Binding PinnedApps}" >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <custom:CircularPanel x:Name="AppsCircularPanel" Width="250" Height="250" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <Button Command="{Binding ClickCommand}" CommandParameter="{Binding}"/>
                        <Image Source="{Binding AppIcon}" Width="40" Height="40" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl ItemsSource="{Binding ButtonLabels}" Visibility="Visible">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <custom:CircularPanel x:Name="CircularButtonPanel" Width="150" Height="150" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}" Style="{StaticResource RoundButton}" Width="40" Height="40" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


    </Grid>
</Window>
